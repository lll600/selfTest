<script>
export default {
  data: function() {
    return {
      userId: wx.getStorageSync("userId") ? wx.getStorageSync("userId") : 0,
      supportCounts: ""
    };
  },
  props: {
    pageList: "",
    pageTotal: "",
    expert: "",
    flag: "",
    searchValue: String,
    searchCondition: Object,
    hasNoData: {
      type: Boolean,
      default: false
    },
    isShowDelete: {
      type: Boolean,
      default: false
    }
  },
  methods: {
    savePerson(m) {
      if (this.userId == "0") {
        wx.showModal({
          title: '提示',
          content: '这是一个模态弹窗',
          success(res) {
            if (res.confirm) {
              console.log('用户点击确定')
            } else if (res.cancel) {
              console.log('用户点击取消')
            }
          }
        })
      } else {
        if (m.IsAttention == true) {
          this.$http({
            url: "UserInfo/attentionDelete",
            method: "delete",
            params: {
              operatorID: this.userId,
              dataID: m.flag == "6" ? m.operatorID : m.userID,
              flag: 3
            }
          }).then(function(res) {
            m.IsAttention = false;
            m.attentionCount -= 1;
          });
        } else {
          this.$http({
            url: "UserInfo/attentionAdd",
            method: "put",
            data: {
              attentionID: 0,
              titleID: 0,
              operatorID: this.userId,
              otherID: m.flag == "6" ? m.operatorID : m.userID,
              flag: 3,
              favoriteID: 0,
              revertID: 0,
              datetime: getNowFormatDate(),
              remark1: null,
              remark2: null
            }
          }).then(function(res) {
            m.IsAttention = true;
            m.attentionCount += 1;
            // console.log(vm.isAttention)
          });
        }
      }
    },
    toPersonal(m) {
      let url = ''
      if (m.flag == "6") {
        url = "/pages/mine/main?userID=" + m.operatorID
      } else if (!m.flag || m.flag == "0") {
        url = "/pages/mine/main?userID=" + m.ID
      } else {
        url = "/pages/mine/main?userID=" + m.userID
      }
      wx.navigateTo({url})
    },
    toDetail(m) {
      if (m.flag == "0" || m.flag == 2) {
        this.$router.push({
          path: "/ArticleDetail",
          query: { titleId: m.titleID, flag: m.flag, authorID: m.ID }
        });
      } else {
        var url = "/pages/problemDetail/main?titleId=" + m.titleID+"&flag="+m.flag+"&questionPerID="+m.ID
        wx.navigateTo({url})
      }
    },
    toSinglePro(m) {
      // if (m.flag == "0" || m.flag == 2) {
      //   this.$router.push({
      //     path: "/ArticleDetail",
